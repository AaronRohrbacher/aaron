<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.submit 'Submit', class: "btn btn-success" %>
<% end %>
